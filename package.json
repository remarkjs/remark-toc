{
  "name": "remark-toc",
  "version": "7.0.0",
  "description": "remark plugin to generate a Table of Contents (TOC)",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "plugin",
    "mdast",
    "markdown",
    "text",
    "plain",
    "text",
    "table",
    "of",
    "contents",
    "content",
    "toc",
    "generation"
  ],
  "repository": "remarkjs/remark-toc",
  "bugs": "https://github.com/remarkjs/remark-toc/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Gary Katsevman <git@gkatsev.com>",
    "Jonathan Haines <jonno.haines@gmail.com>",
    "Robin Millette <robin@millette.info>"
  ],
  "types": "types/index.d.ts",
  "files": [
    "types/index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/unist": "^2.0.3",
    "mdast-util-toc": "^5.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "dtslint": "^2.0.0",
    "is-hidden": "^1.1.0",
    "negate": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark": "^11.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "format": "remark *.md -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s remarkToc > remark-toc.js",
    "build-mangle": "browserify . -s remarkToc -p tinyify > remark-toc.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test-types": "dtslint types",
    "test": "npm run format && npm run build && npm run test-coverage && npm run test-types"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "remark-toc.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
