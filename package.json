{
  "name": "remark-toc",
  "version": "8.0.1",
  "description": "remark plugin to generate a Table of Contents (TOC)",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "text",
    "plain",
    "text",
    "table",
    "of",
    "contents",
    "content",
    "toc",
    "generation"
  ],
  "repository": "remarkjs/remark-toc",
  "bugs": "https://github.com/remarkjs/remark-toc/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Gary Katsevman <git@gkatsev.com>",
    "Jonathan Haines <jonno.haines@gmail.com>",
    "Robin Millette <robin@millette.info>"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/mdast": "^3.0.0",
    "mdast-util-toc": "^6.0.0",
    "unified": "^10.0.0"
  },
  "devDependencies": {
    "@types/tape": "^5.0.0",
    "c8": "^8.0.0",
    "is-hidden": "^2.0.0",
    "prettier": "^3.0.0",
    "remark": "^14.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "rimraf": "^3.0.0",
    "tape": "^5.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.56.0"
  },
  "scripts": {
    "build": "rimraf \"test/**/*.d.ts\" \"*.d.ts\" && tsc && type-coverage",
    "format": "remark . -qfo --ignore-pattern test/ && prettier . -w --log-level warn && xo --fix",
    "test-api": "node --conditions development test/index.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}
